@model LoginVM

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="~/assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-6 pt-5 pt-lg-0">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">

                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                                <div class="col-md-12">
                                    <label asp-for="UsernameOrEmail"> Username or Email</label>
                                    <input asp-for="UsernameOrEmail" placeholder="Username or Email" />
                                    <span class="text-danger" asp-validation-for="UsernameOrEmail"></span>
                                </div>
                                <div class="col-md-12">
                                    <label asp-for="Password"> Surname</label>
                                    <input asp-for="Password" placeholder="Password" />
                                    <span class="text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12 d-flex flex-row">
                                    <label asp-for="IsRemembered" > Remember me </label>
                                    <input asp-for="IsRemembered" placeholder="IsRemembered" />
                                </div>
                                
                                    <div class="col-6">
                                        <button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary my-3">
                                            Login
                                        </button>
                                    </div>
                                    <div class="col-6">
                                          <a asp-action="register"><p class="text-danger">Dont still have account?</p></a>
                                    </div>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->